<Window x:Class="LocalizedApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalizedApp"
        mc:Ignorable="d"
        Title="{DynamicResource  _Settings}" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="ComboBox_Languages" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_Languages_SelectionChanged">
        </ComboBox>
        <TextBlock Text="{DynamicResource _Languages}" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="120" FontSize="14"/>
    </Grid>
</Window>
